@prefix geo: <http://www.opengis.net/ont/geosparql#> .
@prefix piirrite: <http://piirrite.univ-lyon1.fr/ontology/core#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix saref: <https://saref.etsi.org/core/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

piirrite:SpatialPoint a owl:Class ;
    rdfs:label "Spatial point"@en,
        "Point spatial"@fr ;
    rdfs:comment "A point located in a geographic space and possibly contextualized by properties."@en,
        "Un point localisé dans un espace géographique et possiblement contextualisé par des propriétés."@fr ;
    rdfs:subClassOf geo:Feature,
        saref:FeatureOfInterest .

piirrite:osmId a owl:DatatypeProperty ;
    rdfs:label "has OSM id"@en,
        "a l'id OSM"@fr ;
    rdfs:comment "Links an OSM concept to its OSM machine-readable id."@en,
        "Lie un concept OSM à son id OSM machine-lisible."@fr ;
    rdfs:domain piirrite:OsmEntity ;
    rdfs:range xsd:string .

piirrite:hasRelatedOsmTag a owl:ObjectProperty ;
    rdfs:label "has related OSM tag"@en,
        "a une étiquette OSM liée"@fr ;
    rdfs:comment "Links an OSM concept to an OSM tag used in combination."@en,
        "Lie un concept OSM à une étiquette OSM utilisée en combinaison."@fr ;
    rdfs:domain piirrite:OsmEntity ;
    owl:inverseOf piirrite:isOsmTagRelatedTo .

piirrite:isOsmTagRelatedTo a owl:ObjectProperty ;
    rdfs:label "is an OSM tag related to"@en,
        "est une étiquette OSM liée à"@fr ;
    rdfs:comment "Links an OSM tag to the OSM concept it is used in combination with."@en,
        "Lie une étiquette OSM au concept OSM avec lequel elle est utilisée."@fr ;
    rdfs:range piirrite:OsmEntity ;
    owl:inverseOf piirrite:hasRelatedOsmTag .

piirrite:OsmEntity a owl:Class ;
    rdfs:label "OSM entity"@en,
        "Entité OSM"@fr ;
    rdfs:comment "An OSM entity used to contextualize a spatial point."@en,
        "Une entité OSM utilisée pour contextualiser un point spatial."@fr .

